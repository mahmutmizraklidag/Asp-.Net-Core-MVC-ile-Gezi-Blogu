@model Post
@{
    ViewData["Title"] = Model.Title;
}


<div class="container">
    <div class="row">
        <div class="col">
            <img src="/img/@Model.Image" alt="@Model.Title" title="@Model.Title" class="img-fluid" />
        </div>
        <div class="col">
            <h1>@Model.Title</h1>
            <p>
                @Model.Description
            </p>
            <p>
                @String.Format("{0:d}",Model.CreateDate)
            </p>
        </div>
    </div>
</div>


