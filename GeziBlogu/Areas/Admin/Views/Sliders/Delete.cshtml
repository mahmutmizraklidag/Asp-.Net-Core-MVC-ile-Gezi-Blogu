@model GeziBlogu.Entities.Slider

@{
    ViewData["Title"] = "Slider Sil";
}

<h1>Slider Sil</h1>

<h3>Silmek İstediğinize emin misiniz?</h3>
<div>
    <h4>Slider</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="/img/@Model.Image" alt="" height="100"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger mt-2" /> |
        <a class="btn btn-warning" asp-action="Index">Listeye Dön</a>
    </form>
</div>
